{
  "name": "@stylelint/npm-package-json-lint-config",
  "version": "3.0.0",
  "description": "A stylelint shareable config for npm-package-json-lint.",
  "keywords": [
    "@stylelint",
    "npm-package-json-lint",
    "npm-package-json-lint-config"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stylelint/npm-package-json-lint-config.git"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/stylelint"
  },
  "license": "MIT",
  "author": "stylelint",
  "main": "lib/npm-package-json-lint-config.js",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib/npm-package-json-lint-config.js"
  ],
  "scripts": {
    "format": "prettier . --write",
    "jest": "jest",
    "lint": "npm-run-all --parallel lint:*",
    "lint:formatting": "prettier . --check --ignore-path .prettierignore",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:packagejson": "npmPkgJsonLint .",
    "prepare": "husky install",
    "release": "np",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,json,md,yml}": "prettier --write"
  },
  "prettier": "@stylelint/prettier-config",
  "eslintConfig": {
    "extends": [
      "stylelint"
    ],
    "overrides": [
      {
        "files": "**/*.test.js",
        "globals": {
          "describe": true,
          "expect": true,
          "test": true
        }
      }
    ],
    "globals": {
      "module": true,
      "require": true
    },
    "root": true
  },
  "npmpackagejsonlint": {
    "extends": [
      "./lib/npm-package-json-lint-config.js"
    ]
  },
  "dependencies": {
    "npm-package-json-lint": "^7.0.0",
    "npm-package-json-lint-config-default": "^6.0.0"
  },
  "devDependencies": {
    "@stylelint/prettier-config": "^3.0.0",
    "eslint": "^8.44.0",
    "eslint-config-stylelint": "^19.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "np": "^8.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
